#!/usr/bin/env bash

# Download and extract bsdtar

# Optionally, move bsdtar to a specific location

wget https://github.com/peazip/PeaZip/releases/download/8.6.0/peazip_8.6.0.LINUX.GTK2-1_amd64.deb
apt install ./peazip_8.6.0.LINUX.GTK2-1_amd64.deb

ls

cd peazip

ls

./peazip


